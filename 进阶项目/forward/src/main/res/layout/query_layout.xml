<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:landptf="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
    >

    <!--帮别人拿-->
    <com.my.forward.customView.ButtonM
        android:id="@+id/help"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/sos"
        android:layout_alignLeft="@+id/sos"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="帮拿"
        landptf:backColorPress="#737061"
        landptf:background_color="#9e8781"
        landptf:fillet="true"
        landptf:shape="oval"/>

    <!--找别人帮你拿-->
    <com.my.forward.customView.ButtonM
        android:id="@+id/sos"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="代拿"
        landptf:backColorPress="#737061"
        landptf:background_color="#9e8781"
        landptf:fillet="true"
        landptf:shape="oval"/>
</RelativeLayout>